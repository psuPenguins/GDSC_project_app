<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_marginBottom="200dp"
    android:background="@color/app_icon_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/ivLeftArrow"
        android:fontFamily="sans-serif"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Swipe left if you disagree"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias=".1"
        app:layout_constraintBottom_toBottomOf="@id/ivLeftArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivLeftArrow"
        app:layout_constraintTop_toTopOf="@id/ivLeftArrow"
        app:layout_constraintVertical_bias="0.722" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/ivRightArrow"
        android:fontFamily="sans-serif"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Swipe right if you agree"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivRightArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivRightArrow" />

    <ImageView
        android:id="@+id/ivLeftArrow"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:contentDescription="left arrow"
        android:src="@drawable/left_arrow_icon"
        app:layout_constraintTop_toBottomOf="@+id/ivRightArrow"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivRightArrow"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:contentDescription="right arrow"
        android:scaleX="-1"
        android:src="@drawable/left_arrow_icon"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>